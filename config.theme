/*******************************
        Config
*******************************/

/*
  Docs: http://learnsemantic.com/developing/customizing.html#setting-global-variables
*/

/*-------------------
 Theme selection
---------------------*/

/*
  (Required)
  Set which theme to use for which component.
  If you only want to use a private/project theme, use "private"
*/

@active-theme: 'ricardo-theme-ricardo-next';

/* Util */
@util-pull: @active-theme;
@util-box: @active-theme;
@util-clearfix: @active-theme;
@util-grid: @active-theme;

/* Elements */
@button: @active-theme;
@typo: @active-theme;
@form-elements: @active-theme;
@icon: @active-theme;

/* Components */
@panel: @active-theme;
@alert: @active-theme;
@pricebox: @active-theme;
@textsample: @active-theme;
@header: @active-theme;
@footer: @active-theme;
@inline-navigation: @active-theme;

/* Pages */
// @site     : @active-theme;

/*-------------------
 Additional configuration
---------------------*/

/*
  Configure where you host your plugins, components and project specific stylings.
  Paths are relative to the location of this theme.config file.
  The order of the paths specified below is the order in which LESS variables will be loaded.
*/

// Path to your public NPM modules (usually where you install themes and shared FrontendComponents into)
@publicThemeFolder : 'node_modules';
// Path to your project specific theme variables
@projectThemeFolder : 'src/styles';

/*-------------------
 Initialization - Don't touch unless you know what you do
---------------------*/

@import "@{publicThemeFolder}/ricardo-theming/theme.less";

/* End Config */
